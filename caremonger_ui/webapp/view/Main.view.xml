<mvc:View controllerName="caremonger.caremonger_ui.controller.Main" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">
	<App id="idApp">
		<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
			<semantic:titleHeading>
				<Title text="{i18n>worklistTitle}" level="H2"/>
			</semantic:titleHeading>
			<!--<VBox id="idVBox">-->
			<!--	<FacetFilter id="idFacetFilter" type="Light" showPersonalization="true" showReset="true" reset="handleFacetFilterReset"-->
			<!--		lists="{/ProductCollectionStats/Filters}">-->
			<!--		<FacetFilterList title="{type}" key="{key}" mode="MultiSelect" listClose="handleListClose" items="{path: 'values', templateShareable: true}">-->
			<!--			<FacetFilterItem text="{text}" key="{key}" count="{data}"/>-->
			<!--		</FacetFilterList>-->
			<!--	</FacetFilter>-->
			<!-- A demo table will be appended here -->
			<!--</VBox>-->
			<semantic:content>
				<IconTabBar id="iconTabBar" select=".onQuickFilter" expandable="false" headerBackgroundDesign="Transparent">
					<items>
						<IconTabFilter key="all" showAll="true" count="3" text="All Tasks"/>
						<IconTabSeparator/>
						<IconTabFilter key="inStock" icon="sap-icon://message-success" iconColor="Positive" count="2" text="Whitefield"/>
						<IconTabFilter key="shortage" icon="sap-icon://message-warning" iconColor="Critical" count="1" text="Mahadevpura"/>
						<IconTabFilter key="outOfStock" icon="sap-icon://message-error" iconColor="Negative" count="0" text="Hoodi"/>
					</items>
					<content>
						<Table id="table" growing="true" width="auto" items="{path: 'TableData>/results' }">
							<!--<headerToolbar>-->
							<!--	<OverflowToolbar>-->
							<!--		<Title id="tableHeader" text="Title" level="H3"/>-->
							<!--		<ToolbarSpacer/>-->
							<!--		<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search=".onSearch">-->
							<!--			<layoutData>-->
							<!--				<OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow"/>-->
							<!--			</layoutData>-->
							<!--		</SearchField>-->
							<!--	</OverflowToolbar>-->
							<!--</headerToolbar>-->
							<columns>
								<Column id="unitNumberColumn1">
									<Text text="{i18n>tableColumnTitle1}" id="unitNumberColumnTitle1"/>
								</Column>
								<Column id="unitNumberColumn6" demandPopin="true" minScreenWidth="Tablet">
									<Text text="{i18n>tableColumnTitle6}" id="unitNumberColumnTitle6"/>
								</Column>
								<Column id="unitNumberColumn2" demandPopin="false" minScreenWidth="Tablet">
									<Text text="{i18n>tableColumnTitle2}" id="unitNumberColumnTitle2"/>
								</Column>
								<Column id="unitNumberColumn3" hAlign="End" demandPopin="true" minScreenWidth="Tablet">
									<Text text="{i18n>tableColumnTitle3}" id="unitNumberColumnTitle3"/>
								</Column>
								<Column id="unitNumberColumn4" hAlign="End" demandPopin="true" minScreenWidth="Tablet">
									<Text text="{i18n>tableColumnTitle4}" id="unitNumberColumnTitle4"/>
								</Column>
								<Column id="unitNumberColumn5" hAlign="End" demandPopin="true" minScreenWidth="Tablet">
									<Text text="{i18n>tableColumnTitle5}" id="unitNumberColumnTitle5"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem type="Navigation" press=".onPress">
									<cells>
										<ObjectIdentifier title="{TableData>REQUESTER_NAME}"/>
										<ObjectIdentifier title="{TableData>REQUESTER_PHONE_NUMBER}"/>
										<ObjectIdentifier title="{TableData>REQUEST_DESCRIPTION}"/>
										<ObjectIdentifier title="{TableData>REQUEST_TYPE}"/>
										<ObjectIdentifier title="{TableData>CRITICALITY}"/>
										<ObjectStatus text="{TableData>REQUEST_STATUS}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</content>
				</IconTabBar>
			</semantic:content>
		</semantic:SemanticPage>
	</App>
</mvc:View>